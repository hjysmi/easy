<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/img_shop_tab"
            android:layout_width="28.8dp"
            android:layout_height="28.8dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shop" />

        <TextView
            android:id="@+id/tv_shop_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.56dp"
            android:layout_toRightOf="@id/img_shop_tab"
            android:textSize="13.92sp" />
    </RelativeLayout>
</RelativeLayout>