<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_shopwash_btw"
            android:layout_width="76dp"
            android:layout_height="76dp" />

        <TextView
            android:id="@+id/tv_shopwash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_shopwash_btw" />

        <TextView
            android:id="@+id/tv_shopwash_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_shopwash_btw"
            android:includeFontPadding="false"
            android:textColor="@color/bgFF4D4C"
            android:textSize="19.2sp" />

        <TextView
            android:id="@+id/tv_shopwash_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/dotted_line"
            android:includeFontPadding="false"
            android:textColor="@color/bga7a7a7"
            android:textSize="8.6sp" />

        <View
            android:id="@+id/dotted_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="96dp"
            android:background="@color/bgDADADA" />

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <com.ruffian.library.widget.RTextView
                android:id="@+id/img_shopwash_down"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/bgC7CCCD"
                android:textSize="20dp"
                app:border_color_normal="@color/bgC7CCCD"
                app:border_width_normal="1dp"
                android:includeFontPadding="false"
                app:corner_radius="12dp" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="999"
                android:includeFontPadding="false"
                android:textColor="@color/bgC7CCCD"
                android:layout_gravity="center"
                android:textSize="11dp" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/img_shopwash_plus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:background_normal="@color/basecolor"
                app:corner_radius="12dp" />

        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>